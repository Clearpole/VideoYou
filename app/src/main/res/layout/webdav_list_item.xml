<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/web_dav_files_root"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/w_l_i"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/twotone_folder_24"
        app:tint="@color/color5" />

    <LinearLayout
        android:id="@+id/w_i_l"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/w_r_i"
        android:layout_toEndOf="@id/w_l_i"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/web_dav_files_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="18sp"
            android:singleLine="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/web_dav_files_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/w_r_i"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        app:tint="@color/color5" />
</RelativeLayout>